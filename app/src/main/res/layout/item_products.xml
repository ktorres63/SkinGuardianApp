<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/background_button2"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/title_image"
            android:layout_width="137dp"
            android:layout_height="153dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/imagen1"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/background_Card3">

            <TextView
                android:id="@+id/tvRoutineTitle"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_horizontal|center_vertical"
                tools:text="     Glow Toner" />

            <TextView
                android:id="@+id/tvRoutineDescription"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                tools:text="    Utilizado para la cara" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
